      "script-and-regex.regex": "/^(\\h+)(?P<line>\\d+):(?P<char>\\d+)(\\h+)(?P<error>âœ–)(\\h+)(?P<message>.*)(\\h{1,})(?P<code>.*)$/m",
      "include": "(front_end/routes/activity/.*\\.js$)i"
    },
    "eslint-regex-based": {
      "type": "script-and-regex",
      "include": "(\\.jsx?$)",
      "exclude": [],
